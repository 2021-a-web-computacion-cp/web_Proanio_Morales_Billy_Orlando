<%- include ('../Comunes_Proyecto/cabecera.ejs') %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css"
      rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU"
      crossorigin="anonymous">

<div class="container">


    <h1> Actualizar Empresa </h1>

    <form   action="/empresa/actualizar-empresa-formulario/<%=datos.empresa.id%>" method="post">
        <div class="mb-3">
            <label for="razonSocial" class="form-label"> Razon Social * </label>
            <input value="<%=datos.empresa.razonSocial%>"
                   type="text"
                   name="razonSocial"
                   class="form-control"
                   id="razonSocial"
                   aria-describedby="ayudaEmpresa">
            <div id="ayudaBusqueda" class="form-text">
            </div>
        </div>
        <div class="mb-3">
            <label for="ruc" class="form-label"> RUC * </label>
            <input value="<%=datos.empresa.ruc%>"
                   type="text"
                   name="ruc"
                   class="form-control"
                   id="ruc"
                   aria-describedby="ayudaRuc">
            <div id="ayudaBusqueda" class="form-text">
            </div>
        </div>
        <div class="mb-3">
            <label for="telefono" class="form-label"> telefono * </label>
            <input value="<%=datos.empresa.telefono%>"
                   type="text"
                   name="telefono"
                   class="form-control"
                   id="telefono"
                   aria-describedby="ayudaTelefono">
            <div id="ayudaBusqueda" class="form-text">
            </div>
        </div>

        <div class="mb-3">

            <%if(datos.empresa.activo === true){%>
                <label><input type="checkbox" id="activa" name="activo" checked="checked"> En actividad </label>
                <div id="ayudaActividad" class="form-text">Esta en Actividad</div>
            <%}else{%>
                <label><input type="checkbox" id="activa" name="activo"> En actividad </label>
                <div id="ayudaActividad" class="form-text">Esta en Actividad</div>
            <%}%>
        </div>

        <button type="submit" class="btn btn-primary w-100">ACTUALIZAR</button>
    </form>
</div>

<%- include ('../Comunes_Proyecto/footer.ejs') %>
