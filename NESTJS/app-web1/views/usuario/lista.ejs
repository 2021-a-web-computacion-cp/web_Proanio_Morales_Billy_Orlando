<%- include ('../comunes/cabecera')%>


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css"
      rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU"
      crossorigin="anonymous">


    <div class='container'>

        <h1>Lista</h1>


        <% const existeUsuario = typeof datos.mensaje !== 'undefined' %>
        <%  if(existeUsuario) { %>
            <div class="alert alert-danger" role="alert">
                <%= datos.mensaje %>
            </div>
        <%} %>

        <form   action="/usuario/lista-usuarios" method="get">
            <div class="mb-3">
                <label for="busqueda" class="form-label"> Busqueda </label>
                <input placeholder="Ej: Adri"
                       type="text"
                       name="busqueda"
                       class="form-control"
                       id="busqueda"
                       aria-describedby="ayudaBusqueda">
                <div id="ayudaBusqueda" class="form-text"> Puede buscar por nombre o apellido.
                </div>
            </div>
            <button type="submit" class="btn btn-primary w-100">Buscar</button>
        </form>

        <div>
            <a href="/usuario/vista-crear">
                <button class="btn btn-success" >
                    Crear nuevo usuario
                </button>
            </a>
        </div>

        <table class="table text-center">
                <thead>
                    <tr> <th scope="col">#</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                <% datos.usuarios.forEach((objeto) =>{%>
                    <tr>
                        <th> <%= objeto.id %> </th>
                        <th> <%= objeto.nombre %> </th>
                        <th> <%= objeto.apellido %> </th>
                        <th>
                            <form action="/usuario/eliminar-usuario/<%=objeto.id %>" method="post">
                                <button class="btn btn-danger"> Elimiar </button>
                            </form>
                        </th>
                    </tr>
                <% } ) %>
                </tbody>
            </table>
    </div>

<%- include ('../comunes/footer')%>