datasource db {
  provider = "mysql"
  url      = "mysql://root:12345678@localhost:3010/web"
}

generator client {
  provider = "prisma-client-js"
}

model EPN_USUARIO {
    id              Int         @id @default(autoincrement())
    fechaNacimiento DateTime    @default(now())
    apellido        String
    nombre           String?
    mascotas         Mascota[]
}

model Mascota {
    id          Int             @id @default(autoincrement())
    nombre      String
    usuario     EPN_USUARIO     @relation(fields: [usuarioId], references: [id])
    usuarioId    Int
}


model EMPRESA {
    id                 Int         @id @default(autoincrement())
    fechaCreacion      DateTime    @default(now())
    razonSocial        String
    ruc                String
    telefono           Int?
    activo             Boolean
}



